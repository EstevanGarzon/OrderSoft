@model OrderSoftV0.Models.Index

@{
    ViewBag.Title = "Home Page";
}

<br />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center>
                        <b>Iniciar Sesión</b>
                    </center>
                </div>
                <div class="panel-body">
                    <!--<form id="formLogin" action="/HomeController/Index" method="post">-->
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post)) { 
                        <div class="row">
                            <div class="col-md-12">
                                <label for="user">Usuario:</label>
                                @Html.TextBoxFor(Model => Model.user, "", new { @class = "form-control"})
                                @Html.ValidationMessageFor(Model => Model.user)
                                <!--<input type="text" id="user" class="form-control" />-->
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="psw">Contraseña:</label>
                                @Html.TextBoxFor(Model => Model.password, "", new { @class = "form-control" })
                                @Html.ValidationMessageFor(Model => Model.password)
                                <!--<input type="password" id="psw" class="form-control" />-->
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <center>
                                    <input type="submit" id="Login" class="btn btn-lg btn-primary" value="Entrar"/>
                                </center>
                            </div>
                        </div>
                    }
                </div>
                @ViewBag.Message
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>